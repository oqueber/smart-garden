<form action="/Users/update-user" method="POST" class="needs-validation" novalidate>
  <div class="form-row">
    <div class="col-sm-6">
      <label for="validationCustomUsername">Username</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupPrepend">@</span>
        </div>
        <input type="text" class="form-control" value="{{name}}" name="name" placeholder="Username" aria-describedby="inputGroupPrepend" required>
        <div class="invalid-feedback">
          Please choose a username.
        </div>
      </div>
    </div>

   <div class="col-sm-6">
      <label for="inputPassword3" >Password</label>
        <input type="password" class="form-control" name="password" placeholder="password">
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col-sm-6">
      <label for="inputEmail4">Email</label>
      <input type="email" class="form-control" value="{{email}}" name="email" placeholder="Email"><div class="valid-feedback">
        Looks good!
      </div>
    </div>

    <div class="col-sm-6">
      <label for="inputEmail4">Repit Email</label>
      <input type="email" class="form-control" value="{{emailRepeat}}" name="emailRepeat" placeholder="Repit Email"><div class="valid-feedback">
        Looks good!
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col-sm-4">
      <label for="validationCustom03">City</label>
      <input type="text" class="form-control" value="{{city}}" name="city" placeholder="City" required>
      <div class="invalid-feedback">
        Please provide a valid city.
      </div>
    </div>
    <div class="col-sm-4">
      <label for="validationCustom04">State</label>
      <input type="text" class="form-control" value="{{state}}" name="state" placeholder="State" required>
      <div class="invalid-feedback">
        Please provide a valid state.
      </div>
    </div>
    <div class="col-sm-4">
      <label for="validationCustom05">Zip</label>
      <input type="text" class="form-control" value="{{zip}}" name="zip" placeholder="Zip" required>
      <div class="invalid-feedback">
        Please provide a valid zip.
      </div>
    </div>
  </div>
  <div class="form-row">
    <label class="col-sm-12" for="validationCustom05">MAC</label>
    <div class="col input-group">
      <input class="form-control"type="text" maxlength="3" value="{{MAC0}}" name="MAC0" placeholder="MAC" required>
      <p style="padding: 0px 3px;" class="input-group-text">:</p>
    </div>
    <div class="col input-group">
      <input class="form-control"type="text" maxlength="3" value="{{MAC1}}" name="MAC1" placeholder="MAC" required>
      <p style="padding: 0px 3px;" class="input-group-text">:</p>
    </div>
    <div class="col input-group">
      <input class="form-control"type="text" maxlength="3" value="{{MAC2}}" name="MAC2" placeholder="MAC" required>
      <p style="padding: 0px 3px;" class="input-group-text">:</p>
    </div>
    <div class="col input-group">
      <input class="form-control"type="text" maxlength="3" value="{{MAC3}}" name="MAC3" placeholder="MAC" required>
      <p style="padding: 0px 3px;" class="input-group-text">:</p>
    </div>
    <div class="col input-group">
      <input class="form-control"type="text" maxlength="3" value="{{MAC4}}" name="MAC4" placeholder="MAC" required>
      <p style="padding: 0px 3px;" class="input-group-text">:</p>
    </div>
    <div class="col input-group">
      <input class="form-control"type="text" maxlength="3" value="{{MAC5}}" name="MAC5" placeholder="MAC" required>
    </div>
   
    <div class="invalid-feedback">
      Please provide a valid city.
    </div>
  </div>

  <button class="btn btn-primary" type="submit">Update form</button>
</form>
