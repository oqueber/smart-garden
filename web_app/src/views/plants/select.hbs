<div class="row">
  <a href="/my-plants" >
    <i style="padding: 10px 0px;font-size: 2em;" class="material-icons">arrow_back</i>
  </a>


  <div class="col s12">
    <h5>Coleccion de plantas aromaticas</h5>
  </div>
  {{#each Aromatics}}
  <div class="col s6 m3" >
    <div class="card" style="border-radius: 10px;">
        <div class="card-image">
            <img src="/img/{{info.image}}">
            <span style=" opacity: 1; color: #000; padding: 0px; background: #fff; margin-bottom: -20px; margin-left: 10px;"
              class="card-title">{{info.name}}
            </span>
        </div>
        <div class="card-content" style="padding: 15px 5px 10px 5px;border: 2px solid #88b50d;border-radius: 10px;">
            <!-- <p>Fecha de creacion {{{toDate info.date }}} </p> --->
            <a style="padding: 12px;" href="/new-plant/aromatic/{{@index}}">Selec</a>
            <a style="padding: 12px;" class="modal-trigger" href="#modal{{@index}}">More</a>
            {{#if info.beginner}}<p style="background: #f9dd00;border-radius: 10px;width: 100px;text-align: center;margin-left: 7px;margin-top: 5px;">
              Facil de cuidar
            </p> {{/if}}
            <!-- Button trigger modal -->
        </div>
          <!-- Modal Structure -->
        <div id="modal{{@index}}" class="modal">
          <div class="modal-content">
            <h4>{{info.name}}</h4>
            <p>Description: {{ info.description }} </p>
            <p>Espacio {{ info.space }} </p>
          </div>
          <div class="modal-footer">
            <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
          </div>
        </div>
    </div>
  </div>
  {{/each}}
</div>

