<div class="row">
  <div class="col s12 m3" >
    <div style="padding: 10px;" class="card text-center">
      <div style="text-align:center"class="card-header">
        <h5>Crear una nueva planta</h5>
      </div>
      <div class="card-body">
        <form action="/my-plants/new-plant" method="POST">
          <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Title" autofocus/>
          </div>
          <div class="form-group">
            <textarea style="height: 80px;" name="description" class="form-control" placeholder="Description"></textarea>
          </div>
          <div class="form-group">
            <button style="width: 150px;margin: 10px auto;" 
              class="btn btn-primary btn-block" type="submit">
              Seleccionar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

