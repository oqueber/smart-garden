
<div class="row">
<h1>Bienvenido a tu coleccion de plantas {{user.name}} </h1>
<a href="/new-plant">Agregar una nueva planta</a>
  {{#each plants}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{title}}
        </h4>
        <p>{{ info.description }} </p>
        <p>{{ date }} </p>
        <a href="/edit-plant/{{date}}/{{@index}}">
          <button type="button" class="btn btn-primary">
           select 
          </button>
        </a>
      </div>
    </div>
  </div>
  {{/each}}
</div>